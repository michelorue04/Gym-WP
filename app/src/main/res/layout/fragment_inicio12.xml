<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.inicio12">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomNavCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/btnNavPlan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/plan"
                android:backgroundTint="@color/colorNaranja"
                android:textColor="@android:color/white"
                app:cornerRadius="20dp"
                style="@style/Widget.MaterialComponents.Button"/>

            <TextView
                android:id="@+id/btnNavEntrenamiento"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/entrenamiento"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btnNavRapido"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/rapido"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/btnNavExplorar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/explorar"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mi plan de entrenamiento"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perder peso - Equilibrado"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_objetivo"
                    app:tint="@android:color/black"
                    android:layout_marginEnd="16dp"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/colorGrisFondo"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.SmallComponent"
                    android:src="@drawable/ic_persona"
                    android:scaleType="centerInside"
                    app:tint="@android:color/darker_gray"/>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fases de entrenamiento"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/tabFase1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/colorNaranjaFondo"
                        app:strokeColor="@color/colorNaranja"
                        app:strokeWidth="1dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1: Fuerza\n4 semanas"
                                android:textColor="@android:color/black"
                                android:lineSpacingMultiplier="1.2"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_fases"
                                app:tint="@color/colorNaranja"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/tabFase2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/colorGrisFondo"
                        app:strokeWidth="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2: Hipertrofia\n4 semanas"
                                android:textColor="@android:color/darker_gray"
                                android:lineSpacingMultiplier="1.2"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">
                    <TextView
                        android:id="@+id/tvTituloFase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fase 1: Fuerza"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 de 4 semanas"
                        android:layout_below="@id/tvTituloFase"
                        android:textColor="@android:color/darker_gray"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_grupo_muscular"
                        app:tint="@android:color/darker_gray"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/headerSemana1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Semana 1"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_duracion"
                        app:tint="@color/colorNaranja"
                        android:layout_marginEnd="8dp"/>
                    <ImageView
                        android:id="@+id/arrowSemana1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_fases"
                        app:tint="@android:color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contentSemana1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <View
                            android:id="@+id/timelineDot_s1_1"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/ic_persona"
                            app:layout_constraintTop_toTopOf="@id/card_s1_1"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="16dp"/>

                        <View
                            android:id="@+id/timelineLine_s1_1"
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            android:background="@color/colorGrisFondo"
                            app:layout_constraintTop_toBottomOf="@id/timelineDot_s1_1"
                            app:layout_constraintBottom_toBottomOf="@id/card_s1_1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/timelineDot_s1_1"/>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_s1_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/colorGrisFondo"
                            app:strokeWidth="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/timelineDot_s1_1"
                            app:layout_constraintEnd_toEndOf="parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/tvChipHoy_s1_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hoy"
                                    android:background="@drawable/ic_objetivo"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:layout_alignBaseline="@id/tvDia_s1_1"
                                    android:layout_toEndOf="@id/tvDia_s1_1"
                                    android:layout_marginStart="8dp"/>

                                <TextView
                                    android:id="@+id/tvDia_s1_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Miércoles"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvTituloEjercicio_s1_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Espalda, Bíceps y Abdomen"
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:layout_below="@id/tvDia_s1_1"
                                    android:layout_marginTop="4dp"/>

                                <ImageView
                                    android:id="@+id/iconNivel_s1_1"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_fases"
                                    app:tint="@android:color/darker_gray"
                                    android:layout_below="@id/tvTituloEjercicio_s1_1"
                                    android:layout_marginTop="8dp"/>
                                <TextView
                                    android:id="@+id/tvNivel_s1_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bajo • 68 min • 11 ejercicios"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp"
                                    android:layout_toEndOf="@id/iconNivel_s1_1"
                                    android:layout_alignTop="@id/iconNivel_s1_1"
                                    android:layout_alignBottom="@id/iconNivel_s1_1"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="4dp"/>

                                <ImageButton
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/ic_grupo_muscular"
                                    app:tint="@android:color/white"
                                    android:background="@drawable/ic_duracion"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"/>

                            </RelativeLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <View
                            android:id="@+id/timelineLine_s1_2"
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            android:background="@color/colorGrisFondo"
                            app:layout_constraintTop_toTopOf="@id/card_s1_2"
                            app:layout_constraintBottom_toBottomOf="@id/card_s1_2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/timelineDotPlaceHolder_s1_2"/>

                        <View
                            android:id="@+id/timelineDotPlaceHolder_s1_2"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:visibility="invisible"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_s1_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/colorGrisFondo"
                            app:strokeWidth="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/timelineDotPlaceHolder_s1_2"
                            app:layout_constraintEnd_toEndOf="parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/tvDia_s1_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jueves"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvTituloEjercicio_s1_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pecho, Tríceps y Abdomen"
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:layout_below="@id/tvDia_s1_2"
                                    android:layout_marginTop="4dp"/>

                                <ImageView
                                    android:id="@+id/iconNivel_s1_2"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_persona"
                                    app:tint="@android:color/darker_gray"
                                    android:layout_below="@id/tvTituloEjercicio_s1_2"
                                    android:layout_marginTop="8dp"/>
                                <TextView
                                    android:id="@+id/tvNivel_s1_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bajo • 67 min • 11 ejercicios"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp"
                                    android:layout_toEndOf="@id/iconNivel_s1_2"
                                    android:layout_alignTop="@id/iconNivel_s1_2"
                                    android:layout_alignBottom="@id/iconNivel_s1_2"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="4dp"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_lock"
                                    app:tint="@android:color/darker_gray"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"/>

                            </RelativeLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_s1_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp" app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/colorGrisFondo"
                            app:strokeWidth="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/tvDia_s1_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Viernes"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvTituloEjercicio_s1_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Piernas y Hombros"
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:layout_below="@id/tvDia_s1_3"
                                    android:layout_marginTop="4dp"/>

                                <ImageView
                                    android:id="@+id/iconNivel_s1_3"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_grupo_muscular"
                                    app:tint="@android:color/darker_gray"
                                    android:layout_below="@id/tvTituloEjercicio_s1_3"
                                    android:layout_marginTop="8dp"/>
                                <TextView
                                    android:id="@+id/tvNivel_s1_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bajo • 61 min • 10 ejercicios"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp"
                                    android:layout_toEndOf="@id/iconNivel_s1_3"
                                    android:layout_alignTop="@id/iconNivel_s1_3"
                                    android:layout_alignBottom="@id/iconNivel_s1_3"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="4dp"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_lock"
                                    app:tint="@android:color/darker_gray"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"/>

                            </RelativeLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/headerSemana2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/semana_2"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/arrowSemana2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="TODO"
                        android:src="@drawable/ic_grupo_muscular"
                        app:tint="@android:color/black"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/contentSemana2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:text="@string/contenido_semana_2"
                        android:gravity="center"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/headerSemana3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semana 3"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true" />
                    <ImageView
                        android:id="@+id/arrowSemana3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_objetivo"
                        app:tint="@android:color/black"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/headerSemana4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semana 4"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true" />
                    <ImageView
                        android:id="@+id/arrowSemana4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_objetivo"
                        app:tint="@android:color/black"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>