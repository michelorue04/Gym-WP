<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.inicio13">

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_fases"/>
            <ImageButton
                android:id="@+id/btnNavPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_fases"
                app:tint="@android:color/white"/>
        </FrameLayout>

        <ImageButton
            android:id="@+id/btnNavEntrenamiento"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_fases"
            app:tint="@android:color/darker_gray" />

        <ImageButton
            android:id="@+id/btnNavRapido"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_fases"
            app:tint="@android:color/darker_gray" />

        <ImageButton
            android:id="@+id/btnNavExplorar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_fases"
            app:tint="@android:color/darker_gray" />
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mi plan de entrenamiento"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perder peso - Equilibrado"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fases"
                    app:tint="@android:color/black"
                    android:layout_marginEnd="16dp"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/colorGrisFondo"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.SmallComponent"
                    android:src="@drawable/ic_fases"
                    android:scaleType="centerInside"
                    app:tint="@android:color/darker_gray"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fases de entrenamiento"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/tabFase1"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/colorGrisFondo"
                            app:strokeWidth="0dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:text="1: Fuerza\n4 semanas"
                                android:textColor="@android:color/darker_gray"
                                android:lineSpacingMultiplier="1.2"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/tabFase2"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/colorNaranjaFondo"
                            app:strokeColor="@color/colorNaranja"
                            app:strokeWidth="1dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:text="2: Hipertrofia\n4 semanas"
                                android:textColor="@android:color/black"
                                android:lineSpacingMultiplier="1.2"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/tabFase3"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/colorGrisFondo"
                            app:strokeWidth="0dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:text="3: Hipertrofia +\n4 semanas"
                                android:textColor="@android:color/darker_gray"
                                android:lineSpacingMultiplier="1.2"/>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>
                </HorizontalScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">
                    <TextView
                        android:id="@+id/tvTituloFase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fase 2: Hipertrofia"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 semanas"
                        android:layout_below="@id/tvTituloFase"
                        android:textColor="@android:color/darker_gray"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_fases"
                        app:tint="@android:color/darker_gray"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/headerSemana1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semana 1"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true" />
                    <ImageView
                        android:id="@+id/arrowSemana1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_fases"
                        app:tint="@android:color/black"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/contentSemana1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <View
                        android:id="@+id/timelineLine_s1"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="@color/colorGrisFondo"
                        app:layout_constraintTop_toTopOf="@id/timelineDot_s1_1"
                        app:layout_constraintBottom_toBottomOf="@id/timelineDot_s1_6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/timelineDot_s1_1"/>

                    <View
                        android:id="@+id/timelineDot_s1_1"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/ic_fases"
                        app:layout_constraintTop_toTopOf="@id/card_s1_1"
                        app:layout_constraintBottom_toBottomOf="@id/card_s1_1"
                        app:layout_constraintStart_toStartOf="parent" />
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_s1_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/colorGrisFondo"
                        app:strokeWidth="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/timelineDot_s1_1"
                        app:layout_constraintEnd_toEndOf="parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">
                            <TextView android:id="@+id/tvDia_s1_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Domingo" android:textColor="@android:color/black" android:textSize="14sp" />
                            <TextView android:id="@+id/tvTitulo_s1_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hombros y Trapecio" android:textColor="@android:color/black" android:textSize="18sp" android:textStyle="bold" android:layout_below="@id/tvDia_s1_1" android:layout_marginTop="4dp"/>
                            <ImageView android:id="@+id/iconNivel_s1_1" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_signal_cellular" app:tint="@android:color/darker_gray" android:layout_below="@id/tvTitulo_s1_1" android:layout_marginTop="8dp"/>
                            <TextView android:id="@+id/tvNivel_s1_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Medio • 42 min • 8 ejercicios" android:textColor="@android:color/darker_gray" android:textSize="14sp" android:layout_toEndOf="@id/iconNivel_s1_1" android:layout_alignTop="@id/iconNivel_s1_1" android:layout_alignBottom="@id/iconNivel_s1_1" android:gravity="center_vertical" android:layout_marginStart="4dp"/>
                            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_lock" app:tint="@android:color/darker_gray" android:layout_alignParentEnd="true" android:layout_centerVertical="true"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <View
                        android:id="@+id/timelineDot_s1_2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/ic_fases"
                        app:layout_constraintTop_toTopOf="@id/card_s1_2"
                        app:layout_constraintBottom_toBottomOf="@id/card_s1_2"
                        app:layout_constraintStart_toStartOf="parent" />
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_s1_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/colorGrisFondo"
                        app:strokeWidth="0dp"
                        app:layout_constraintTop_toBottomOf="@id/card_s1_1"
                        app:layout_constraintStart_toEndOf="@id/timelineDot_s1_2"
                        app:layout_constraintEnd_toEndOf="parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">
                            <TextView android:id="@+id/tvDia_s1_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Lunes" android:textColor="@android:color/black" android:textSize="14sp" />
                            <TextView android:id="@+id/tvTitulo_s1_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pecho y Abdomen" android:textColor="@android:color/black" android:textSize="18sp" android:textStyle="bold" android:layout_below="@id/tvDia_s1_2" android:layout_marginTop="4dp"/>
                            <ImageView android:id="@+id/iconNivel_s1_2" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_signal_cellular" app:tint="@android:color/darker_gray" android:layout_below="@id/tvTitulo_s1_2" android:layout_marginTop="8dp"/>
                            <TextView android:id="@+id/tvNivel_s1_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Medio • 55 min • 9 ejercicios" android:textColor="@android:color/darker_gray" android:textSize="14sp" android:layout_toEndOf="@id/iconNivel_s1_2" android:layout_alignTop="@id/iconNivel_s1_2" android:layout_alignBottom="@id/iconNivel_s1_2" android:gravity="center_vertical" android:layout_marginStart="4dp"/>
                            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_lock" app:tint="@android:color/darker_gray" android:layout_alignParentEnd="true" android:layout_centerVertical="true"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <View
                        android:id="@+id/timelineDot_s1_3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/ic_fases"
                        app:layout_constraintTop_toTopOf="@id/card_s1_3"
                        app:layout_constraintBottom_toBottomOf="@id/card_s1_3"
                        app:layout_constraintStart_toStartOf="parent" />
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_s1_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/colorGrisFondo"
                        app:strokeWidth="0dp"
                        app:layout_constraintTop_toBottomOf="@id/card_s1_2"
                        app:layout_constraintStart_toEndOf="@id/timelineDot_s1_3"
                        app:layout_constraintEnd_toEndOf="parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">
                            <TextView android:id="@+id/tvDia_s1_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Martes" android:textColor="@android:color/black" android:textSize="14sp" />
                            <TextView android:id="@+id/tvTitulo_s1_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Espalda y Antebrazos" android:textColor="@android:color/black" android:textSize="18sp" android:textStyle="bold" android:layout_below="@id/tvDia_s1_3" android:layout_marginTop="4dp"/>
                            <ImageView android:id="@+id/iconNivel_s1_3" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_signal_cellular" app:tint="@android:color/darker_gray" android:layout_below="@id/tvTitulo_s1_3" android:layout_marginTop="8dp"/>
                            <TextView android:id="@+id/tvNivel_s1_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Medio • 61 min • 9 ejercicios" android:textColor="@android:color/darker_gray" android:textSize="14sp" android:layout_toEndOf="@id/iconNivel_s1_3" android:layout_alignTop="@id/iconNivel_s1_3" android:layout_alignBottom="@id/iconNivel_s1_3" android:gravity="center_vertical" android:layout_marginStart="4dp"/>
                            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_lock" app:tint="@android:color/darker_gray" android:layout_alignParentEnd="true" android:layout_centerVertical="true"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <View
                        android:id="@+id/timelineDot_s1_4"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/ic_fases"
                        app:layout_constraintTop_toTopOf="@id/card_s1_4"
                        app:layout_constraintBottom_toBottomOf="@id/card_s1_4"
                        app:layout_constraintStart_toStartOf="parent" />
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_s1_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/colorGrisFondo"
                        app:strokeWidth="0dp"
                        app:layout_constraintTop_toBottomOf="@id/card_s1_3"
                        app:layout_constraintStart_toEndOf="@id/timelineDot_s1_4"
                        app:layout_constraintEnd_toEndOf="parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">
                            <TextView android:id="@+id/tvDia_s1_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Miércoles" android:textColor="@android:color/black" android:textSize="14sp" />
                            <TextView android:id="@+id/tvTitulo_s1_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Piernas" android:textColor="@android:color/black" android:textSize="18sp" android:textStyle="bold" android:layout_below="@id/tvDia_s1_4" android:layout_marginTop="4dp"/>
                            <ImageView android:id="@+id/iconNivel_s1_4" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_signal_cellular" app:tint="@android:color/darker_gray" android:layout_below="@id/tvTitulo_s1_4" android:layout_marginTop="8dp"/>
                            <TextView android:id="@+id/tvNivel_s1_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Medio • 68 min • 10 ejercicios" android:textColor="@android:color/darker_gray" android:textSize="14sp" android:layout_toEndOf="@id/iconNivel_s1_4" android:layout_alignTop="@id/iconNivel_s1_4" android:layout_alignBottom="@id/iconNivel_s1_4" android:gravity="center_vertical" android:layout_marginStart="4dp"/>
                            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_lock" app:tint="@android:color/darker_gray" android:layout_alignParentEnd="true" android:layout_centerVertical="true"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <View
                        android:id="@+id/timelineDot_s1_5"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/ic_fases"
                        app:layout_constraintTop_toTopOf="@id/card_s1_5"
                        app:layout_constraintBottom_toBottomOf="@id/card_s1_5"
                        app:layout_constraintStart_toStartOf="parent" />
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_s1_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/colorGrisFondo"
                        app:strokeWidth="0dp"
                        app:layout_constraintTop_toBottomOf="@id/card_s1_4"
                        app:layout_constraintStart_toEndOf="@id/timelineDot_s1_5"
                        app:layout_constraintEnd_toEndOf="parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">
                            <TextView android:id="@+id/tvDia_s1_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Jueves" android:textColor="@android:color/black" android:textSize="14sp" />
                            <TextView android:id="@+id/tvTitulo_s1_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tríceps y Abdomen" android:textColor="@android:color/black" android:textSize="18sp" android:textStyle="bold" android:layout_below="@id/tvDia_s1_5" android:layout_marginTop="4dp"/>
                            <ImageView android:id="@+id/iconNivel_s1_5" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_signal_cellular" app:tint="@android:color/darker_gray" android:layout_below="@id/tvTitulo_s1_5" android:layout_marginTop="8dp"/>
                            <TextView android:id="@+id/tvNivel_s1_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Medio • 52 min • 9 ejercicios" android:textColor="@android:color/darker_gray" android:textSize="14sp" android:layout_toEndOf="@id/iconNivel_s1_5" android:layout_alignTop="@id/iconNivel_s1_5" android:layout_alignBottom="@id/iconNivel_s1_5" android:gravity="center_vertical" android:layout_marginStart="4dp"/>
                            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_lock" app:tint="@android:color/darker_gray" android:layout_alignParentEnd="true" android:layout_centerVertical="true"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <View
                        android:id="@+id/timelineDot_s1_6"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/ic_fases"
                        app:layout_constraintTop_toTopOf="@id/card_s1_6"
                        app:layout_constraintBottom_toBottomOf="@id/card_s1_6"
                        app:layout_constraintStart_toStartOf="parent" />
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_s1_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/colorGrisFondo"
                        app:strokeWidth="0dp"
